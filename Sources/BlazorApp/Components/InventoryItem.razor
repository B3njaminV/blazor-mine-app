<div class="item"
     ondragover="event.preventDefault();"
     draggable="true"
     @ondragstart="@OnDragStart"
     @ondrop="@OnDrop"
     @ondragenter="@OnDragEnter"
     @ondragleave="@OnDragLeave"
     @ondragend="@OnDragEnd">

    @if (Item is not null)
    {
        @if (!string.IsNullOrWhiteSpace(Item.ImageBase64) && !Item.ImageBase64.Equals(""))
        {
            <img src="data:image/png;base64, @(Item.ImageBase64)" class="image" title="@Item.DisplayName" alt="@Item.DisplayName" />
        }
        else
        {
            <div class="image">
                @Item.DisplayName
            </div>
        }
        <div class="stack">
            @Item.StackSize
        </div>
    }
</div>

