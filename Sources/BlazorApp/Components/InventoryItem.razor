<div
    class="item"
    ondragover="event.preventDefault();"
    draggable="true"
    @ondragstart="@OnDragStart"
    @ondrop="@OnDrop"
    @ondragenter="@OnDragEnter"
    @ondragend="@OnDragEnd">

    @if (Item != null)
    {
        @if (!string.IsNullOrWhiteSpace(Item.ImageBase64))
        {
            <img src="data:image/png;base64, @(Item.ImageBase64)" class="img-thumbnail" title="@Item.DisplayName" alt="@Item.DisplayName"/>
        }
        else
        {
            <img src="images/default.png" class="img-thumbnail" title="@Item.DisplayName" alt="@Item.DisplayName" style="max-height: 75px"/>
        }
        <p>@Item.DisplayName (@Parent.CurrentStackSize)</p>
    }
    else
    {
        <p>Empty</p>
    }
</div>